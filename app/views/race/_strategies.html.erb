
<div class="container strategies">
  <div class="col-md-12">
    <table align="center">
      <thead>
        <tr>
          <th></th>
          <% proposer.t.size.times do |i| %>
            <th class="<%= frame_css_from_number(i + 1) %>" title="<%= tooltip_horse_name(i + 1) %>" data-bs-toggle="tooltip" data-bs-placement="top">
              <%= i + 1 %>
            </th>
          <% end %>
          <th> expect </th>
          <th> prob. </th>
          <th> actual </th>
        </tr>
      </thead>
      <tbody>

        <tr>
          <td> true distirbution </td>
          <% proposer.t.each do |value| %>
            <td class="<%= true_distribution_css(value) %>">
              <%= display_float value %>
            </td>
          <% end %>
          <td></td>
          <td></td>
          <td></td>
        </tr>

        <tr>
          <td> base strategy </td>
          <% proposer.base_strategy.each do |value| %>
            <td><%= display_float value %></td>
          <% end %>
          <% [proposer.base_expected_gain, nil, actual_gain(proposer.base_strategy)].each do |val| %>
            <%= tag.td class: gain_css(val) do %>
              <%= display_float val %>
            <% end %>
          <% end %>
        </tr>

        <tr>
          <td> gain strategy </td>
          <% strategy = proposer.gain_strategy %>
          <% strategy.each do |value| %>
            <td class="<%= strategy_css(value) %>">
              <%= value %>
            </td>
          <% end %>
          <%= td_expected_gain(strategy) %>
          <%= td_probability(strategy) %>
          <%= td_actual_gain(strategy) %>
        </tr>

        <tr>
          <td> hit strategy </td>
          <% strategy = proposer.hit_strategy %>
          <% strategy.each do |value| %>
            <td class="<%= strategy_css(value) %>">
              <%= value %>
            </td>
          <% end %>
          <%= td_expected_gain(strategy) %>
          <%= td_probability(strategy) %>
          <%= td_actual_gain(strategy) %>
        </tr>

      </tbody>
    </table>
  </div>
</div>
