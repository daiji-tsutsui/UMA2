
<div class="container strategies">
  <div class="col-md-12">
    <table align="center">
      <thead>
        <tr>
          <th></th>
          <% proposer.t.size.times do |i| %>
            <th class="<%= frame_css_from_number(i + 1) %>" title="<%= tooltip_horse_name(i + 1) %>" data-bs-toggle="tooltip" data-bs-placement="top">
              <%= i + 1 %>
            </th>
          <% end %>
          <th> expect </th>
          <th> prob. </th>
          <th> actual </th>
        </tr>
      </thead>
      <tbody>

        <tr>
          <td> true distirbution </td>
          <% proposer.t.each do |value| %>
            <td class="<%= true_distribution_css(value) %>">
              <%= display_float value %>
            </td>
          <% end %>
          <td></td>
          <td></td>
          <td></td>
        </tr>

        <tr>
          <td> base strategy </td>
          <% proposer.base_strategy.each do |value| %>
            <td><%= display_float value %></td>
          <% end %>
          <td><%= display_float proposer.base_expectation %></td>
          <td></td>
          <td><%= display_float actual_gain(proposer.base_strategy) %></td>
        </tr>

        <tr>
          <td> gain strategy </td>
          <% proposer.gain_strategy.each do |value| %>
            <td class="<%= strategy_css(value) %>">
              <%= value %>
            </td>
          <% end %>
          <td><%= display_float proposer.gain_strategy.expectation %></td>
          <td><%= display_float proposer.gain_strategy.probability %></td>
          <td><%= display_float actual_gain(proposer.gain_strategy) %></td>
        </tr>

        <tr>
          <td> hit strategy </td>
          <% proposer.hit_strategy.each do |value| %>
            <td class="<%= strategy_css(value) %>">
              <%= value %>
            </td>
          <% end %>
          <td><%= display_float proposer.hit_strategy.expectation %></td>
          <td><%= display_float proposer.hit_strategy.probability %></td>
          <td><%= display_float actual_gain(proposer.hit_strategy) %></td>
        </tr>

      </tbody>
    </table>
  </div>
</div>
