<div class="col-md-12">
  <div class="row">
    <div class="col-md-1">馬番</div>
    <div class="col-md-5">馬名</div>
    <div class="col-md-2">性齢</div>
    <div class="col-md-2">騎手</div>
    <div class="col-md-2">馬体重</div>
  </div>

  <% race_horses.each do |race_horse| %>
    <div class="row">
      <div class="col-md-1 raceframe-<%= race_horse.frame %>">
        <%= race_horse.number %>
      </div>
      <div class="col-md-5">
        <%= link_to race_horse.horse.name, race_horse.horse %>
      </div>
      <div class="col-md-2"><%= race_horse.sexage %></div>
      <div class="col-md-2"><%= race_horse.jockey %></div>
      <div class="col-md-2"><%= race_horse.weight %></div>
    </div>
  <% end %>
</div>
