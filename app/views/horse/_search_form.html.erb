
<div class="container search_form">
  <%= form_with url: horses_path, method: :get do |f| %>
    <div class="form-group">
      <%= f.label :name, '馬名' %>
      <%= f.text_field :name, value: params[:name], class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :date, '出馬期間' %>
      <%= f.text_field :date, value: params[:date], class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.button '検索', class: "btn btn-dark btn-block blank" %>
      <%= button_tag type: 'button', onclick: 'clearForms();', class: "btn btn-dark btn-block blank" do %>
        <%= 'クリア' %>
      <% end %>
    </div>
  <% end %>
</div>

<%= javascript_include_tag 'clear_form' %>
<script>
  function clearForms() {
    clearTextInputs(['name', 'date']);
  }
</script>
