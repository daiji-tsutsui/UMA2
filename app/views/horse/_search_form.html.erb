
<div class="container search_form">
<%= form_with url: horses_path, method: :get do |f| %>
  <div class="form-group">
    <%= f.label :name, '馬名' %>
    <%= f.text_field :name, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :date, '出馬期間' %>
    <%= f.text_field :date, class: "form-control" %>
  </div>
  <%= f.submit '検索', class: "btn btn-light btn-block blank" %>
<% end %>
</div>
