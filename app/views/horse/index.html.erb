
<div class="container horse_list">
  <div class="col-md-4">
    <%= render 'search_form' %>
  </div>

  <div class="col-md-8">
    <div class="row">
      <div class="col-md-4"><strong>馬名</strong></div>
      <div class="col-md-3"><strong>直近のレース</strong></div>
      <div class="col-md-3"><strong>開催日</strong></div>
      <div class="col-md-2"><strong>成績</strong></div>
    </div>
    <% @horses.each do |horse| %>
      <div class="row">
        <div class="col-md-4">
          <%= link_to horse.name, horse %>
        </div>
        <div class="col-md-3">
          <%= link_to horse.race_horse.race.name, horse.race_horse.race %>
        </div>
        <div class="col-md-2">
          <%= horse.race_horse.race.race_date.value %>
        </div>
        <div class="col-md-3"></div>
      </div>
    <% end %>
  </div>
</div>

<%= render 'shared/paginate', objects: @horses %>

